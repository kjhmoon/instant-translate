{
  "manifest_version": 3,
  "name": "Instant Translate",
  "version": "1.0.0",
  "description": "Translate selected text instantly on the page.",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api-free.deepl.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "options/options.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ]
}